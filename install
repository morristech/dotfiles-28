echo "Installing dotfiles using gnu stow"
for dirname in */ ; do stow "$dirname"; done

sleep 2

# ZSH spaceship theme
echo "Installing spaceship theme"
git clone https://github.com/denysdovhan/spaceship-prompt.git "$ZSH_CUSTOM/themes/spaceship-prompt"
ln -s "$ZSH_CUSTOM/themes/spaceship-prompt/spaceship.zsh-theme" "$ZSH_CUSTOM/themes/spaceship.zsh-theme"

# Auto complete
echo "Installing zsh auto suggestions"
git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions

# Tmux tpm
echo "Installing tmux plugin manager"
git clone https://github.com/tmux-plugins/tpm ~/.tmux/plugins/tpm

# Rofi
echo "Installing rofi themes"
mkdir -p $HOME/.local/share/rofi/themes/
curl https://github.com/ricwtk/rofi-themes/input-emph-nobar.rasi -o $HOME/.local/share/rofi/themes/input-emph-nobar.rasi
